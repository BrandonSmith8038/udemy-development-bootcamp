<% include ./partials/header %>

  <div class="ui main text container">
    
    <div class="ui huge header">RESTful Blog App</div>
    
    <a class="ui floated basic green button" href="story/new">Add New</a>
    
    <div class="ui top attached segment">
      
      <div class="ui divided items">
        
          <% stories.forEach((story) => { %>
        <div class="item">
        
            <div class="image">
            
              <img src="<%= story.image %>" alt="">
              
            </div>
            
            <div class="content">
              
              <a class='header' href='story/<%=story.id%>'><%= story.title %></a>
              
              <div class="meta">
                
                <span><%= story.created.toDateString() %></span>
                
              </div>
              
              <div class="description">
                
                <p><%- story.body.substring(0, 100) %> ...</p>
                
              </div>
              
              <div class="extra">
                
                <a class="ui floated basic violet button" href="story/<%=story.id%>">
                    Read More
                    <i class="right chevron icon"></i>
                  </a>
                
              </div>
              
  
            </div>
        
        </div>
          <% }) %>
        
      </div>
      
    </div>
    
  </div>

<% include ./partials/footer %>