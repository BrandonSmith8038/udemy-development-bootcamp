<%- include('../partials/header') %>

    <header class="jumbotron">
      <div class="container">
        <h1>Welcome To Yelp Camp</h1>
        <p>View Our Hand Picked Campgrounds From All Over The World</p>
        <p>
          <a href="/campgrounds/new" class="btn btn-md btn-primary">Add New Campground</a>
        </p>
        <p>
          <form action='/campgrounds' method='GET' class='form-inline'>
            <div class='form-group'>
              <input type='text' name='search' placeholder='Campground Search' class='form-control'>
              <input type='submit' value='Search' class='btn btn-default'>
            </div>
          </form>
        </p>
      </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% if(noMatch !== undefined) { %>
      <div class="col-md-6">
          <h3><%= noMatch %></h3>
      </div>
        <% } %>
      <% campgrounds.forEach((campground) => { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= campground.image %>" alt="">
            <div class="caption">
              <h4>
                <%= campground.name %>
              </h4>
            </div>
            <p>
              <a href="/campgrounds/<%= campground.id %>" class="btn btn-info">Show More</a>
            </p>
          </div>
        </div>

        <% }) %>
    </div>


  <%- include('../partials/footer') %>